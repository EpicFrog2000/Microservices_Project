<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DockerLearning</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="content">
        <div class="nav-list">
            @{
                var navItems = new List<string>
            {
            "Home",
            "About",
            "Projects",
            "GitHub",
            "Youtube"
            };
            }
            @foreach (var item in navItems)
            {
                <div class="nav-li @(ViewBag.CurrentPage == item ? "active" : "")">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="@item">
                        <div class="nav-item">
                            @{
                                string iconClass = "";
                                switch (item)
                                {
                                    case "Home":
                                        iconClass = "fa fa-home";
                                        break;
                                    case "About":
                                        iconClass = "fa fa-info-circle";
                                        break;
                                    case "Projects":
                                        iconClass = "fa fa-rocket";
                                        break;
                                    case "GitHub":
                                        iconClass = "fa fa-github";
                                        break;
                                    case "Youtube":
                                        iconClass = "fa fa-youtube-play";
                                        break;
                                    default:
                                        break;
                                }
                            }
                            <i class="@iconClass" style="font-size:24px"></i>
                            <span class="nav-text">@item</span>
                        </div>
                    </a>
                </div>
            }
        </div>
        @RenderBody()
    </div>
</body>
</html>
<script>
    $(document).ready(function () {
        $('.nav-li').click(function () {
            var url = $(this).attr('href');
            if (url) {
                window.location.href = url;
            }
        });
    });
</script>
